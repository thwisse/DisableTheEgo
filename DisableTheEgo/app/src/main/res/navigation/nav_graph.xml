<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="io.github.thwisse.disabletheego.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_dashboardFragment_to_happinessFragment"
            app:destination="@id/happinessFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_optimismFragment"
            app:destination="@id/optimismFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_kindnessFragment"
            app:destination="@id/kindnessFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_givingFragment"
            app:destination="@id/givingFragment" />
        <action
            android:id="@+id/action_dashboardFragment_to_respectFragment"
            app:destination="@id/respectFragment" />
    </fragment>
    <fragment
        android:id="@+id/happinessFragment"
        android:name="io.github.thwisse.disabletheego.HappinessFragment"
        android:label="fragment_happiness"
        tools:layout="@layout/fragment_happiness" />
    <fragment
        android:id="@+id/optimismFragment"
        android:name="io.github.thwisse.disabletheego.OptimismFragment"
        android:label="fragment_optimism"
        tools:layout="@layout/fragment_optimism" />
    <fragment
        android:id="@+id/kindnessFragment"
        android:name="io.github.thwisse.disabletheego.KindnessFragment"
        android:label="fragment_kindness"
        tools:layout="@layout/fragment_kindness" />
    <fragment
        android:id="@+id/givingFragment"
        android:name="io.github.thwisse.disabletheego.GivingFragment"
        android:label="fragment_giving"
        tools:layout="@layout/fragment_giving" />
    <fragment
        android:id="@+id/respectFragment"
        android:name="io.github.thwisse.disabletheego.RespectFragment"
        android:label="fragment_respect"
        tools:layout="@layout/fragment_respect" />
</navigation>